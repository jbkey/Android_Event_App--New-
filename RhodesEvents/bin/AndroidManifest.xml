<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="takeone.rhodesevents"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="takeone.rhodesevents.Start_screen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="takeone.rhodesevents.CreateEvent"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_create_event"
            android:parentActivityName="takeone.rhodesevents.Start_screen"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="takeone.rhodesevents.Start_screen" />
        </activity>
        <activity
            android:name="takeone.rhodesevents.Create"
            android:label="@string/title_activity_create" >
        </activity>
    </application>

</manifest>